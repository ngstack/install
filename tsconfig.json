{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "outDir": "./bin",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["bin", "node_modules"]
}
